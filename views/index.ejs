<a href="/post/bounty">Create bounty</a>

<div class="section">
    <div class="container">

      <div class="columns">
        <div class="column">
          <% issues.forEach(function(issue){ %>
            <div class="box">
              <a href="/bounties/<%= issue.id %>">
              <div class="content">
                <h1 class="title"><%= issue.title %></h1>
                <div class="tags">
                  <span class="tag is-success">
                  bounty: <%= issue.total_bounty_amount %> sats
                  </span>
                  <span class="tag is-dark">
                   <%= issue.created_on %>
                  </span>
                  <span class="tag is-link">
                  <%= issue.name %>
                  </span>
                </div>
              </div>
              </a>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
